<Window x:Class="WSDF.Views.UpdateCardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSDF.Views"
        mc:Ignorable="d"
        Title="Редактирование карточки" Height="300" Width="400">
    
    <StackPanel Margin="10">
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Название карточки:" VerticalAlignment="Top" Margin="0,10,0,5"/>
        <TextBox x:Name="NameForm" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Padding="5" Margin="0,0,0,15"/>
        
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Путь к изображению:" VerticalAlignment="Top" Margin="0,0,0,5"/>
        <TextBox x:Name="ImagePathForm" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Padding="5" Margin="0,0,0,15"/>
        
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Связанные пользователи:" VerticalAlignment="Top" Margin="0,0,0,5"/>
        <ListBox x:Name="UsersListBox" Height="100" Width="200" SelectionMode="Multiple" Margin="0,0,0,15"/>
        
        <Button x:Name="UpdateCardButton" Click="UpdateCardButton_Click" Width="150" Padding="5">Сохранить изменения</Button>
    </StackPanel>
</Window>
