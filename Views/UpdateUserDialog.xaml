<Window x:Class="WSDF.Views.UpdateUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSDF.Views"
        mc:Ignorable="d"
        Title="Редактирование пользователя" Height="250" Width="350">
    
    <StackPanel Margin="10">
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Имя пользователя:" VerticalAlignment="Top" Margin="0,10,0,5"/>
        <TextBox x:Name="NameForm" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Padding="5" Margin="0,0,0,15"/>
        
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Выберите роль:" VerticalAlignment="Top" Margin="0,0,0,5"/>
        <ComboBox x:Name="RoleComboBox" HorizontalAlignment="Center" Width="200" Padding="5" Margin="0,0,0,20" DisplayMemberPath="name"/>
        
        <Button x:Name="UpdateUserFormButton" Click="UpdateUserFormButton_Click" Width="150" Padding="5">Сохранить изменения</Button>
    </StackPanel>
</Window>
